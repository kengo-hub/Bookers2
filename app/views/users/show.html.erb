<% if @book.errors.any? %>
     <h3 style="color: red"><%= @book.errors.count %>error prohibited this book from being saved:</h3>
     <div id="error_explanation">
       <ul style="color: red">
         <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
      </div>
   <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'books/index', user: @user,book: @book %>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback:"no_image.jpg" %></td>
          <% end %>
        <td>
        <%= link_to book_path(book) do %>
          <%= book.title %>
        <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
</div>
</div>