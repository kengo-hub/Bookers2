<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<h2>Users info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback:"no_image.jpg" %>
<table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</tbody></table>
<p><%= link_to"", edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %></p>
 


<h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <div>
    <label>Title</label>
  </div>  
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <label>Opinion</label>
  </div>
  <div>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback:"no_image.jpg" %><br>
            <%= @user.name %>
            <% end %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  
</div>


</div>
</div>

